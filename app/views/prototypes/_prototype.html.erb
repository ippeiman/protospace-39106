<div class="card">
  <%= image_tag prototype.image, class: :'card__img' %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.name}", root_path, class: :card__user %>
    <% if user_signed_in? && current_user.id == prototype.user_id %>
      <li>
        <%= link_to '編集', root_path(prototype.id), method: :get %>
      </li>
      <li>
        <%= link_to '削除', prototype_path(prototype.id), method: :delete %>
      </li>
    <% end %>
  </div>
</div>